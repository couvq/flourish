{
  "compilerOptions": {
    "rootDir": "src/components",
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "lib",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/components"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
