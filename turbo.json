{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "clean": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "run-playwright-tests": {},
    "storybook": {
      "dependsOn": ["^build"]
    },
    "flourish-release": {
      "dependsOn": ["^build"]
    }
  }
}
